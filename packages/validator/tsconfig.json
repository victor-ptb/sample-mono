{
  "compilerOptions": {
    "incremental": true,
    "target": "es6",
    "module": "es2015",
    "rootDir": "./src",
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "./dist/**/*", "./docs/**/*"]
}
